{
  "name": "website",
  "packageManager": "bun@1.3.4",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "fumadocs-mdx",
    "dev": "bun --bun run next dev --turbo",
    "build": "NODE_OPTIONS='--max-old-space-size=512' next build",
    "build:static": "NODE_OPTIONS='--max-old-space-size=512' STATIC_EXPORT=true NEXT_PUBLIC_STATIC_EXPORT=true next build",
    "start": "next start",
    "preview": "next build && next start",
    "format": "biome format --write",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "lint:doctor": "ultracite doctor",
    "type-check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "convert:portfolio": "bun run scripts/pdf-to-avif.ts",
    "convert:projects": "bun run scripts/projects-pdf-to-jpg.ts",
    "test": "bun --bun vitest",
    "test:ui": "bun --bun vitest --ui",
    "test:run": "bun --bun vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "bun run test:run && bun run test:e2e",
    "playwright:install": "playwright install --with-deps"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.21",
    "@fumadocs/mdx-remote": "^1.4.3",
    "@internationalized/date": "^3.10.1",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@t3-oss/env-nextjs": "^0.13.10",
    "cmdk": "^1.1.1",
    "cobe": "^0.6.5",
    "fumadocs-core": "^14.2.4",
    "motion": "^12.23.26",
    "next": "^15.1.6",
    "next-themes": "^0.4.6",
    "nuqs": "^2.8.5",
    "react": "^19.2.3",
    "react-aria-components": "^1.14.0",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-spring": "^10.0.3",
    "shiki": "^3.20.0",
    "sonner": "^2.0.7",
    "vaul": "^1.1.2",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "cva": "1.0.0-beta.4",
    "fumadocs-mdx": "^14.2.4",
    "happy-dom": "^20.5.1",
    "jsdom": "^28.0.0",
    "lefthook": "^2.0.12",
    "pdf-to-img": "^5.0.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "tailwindcss-animated": "^2.0.0",
    "tailwindcss-react-aria-components": "^2.0.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "ultracite": "6.4.1",
    "vitest": "^4.0.18"
  }
}
